<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Base"/>
    
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="spinner_style" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:gravity">center</item>
        <item name="android:popupBackground">@color/spinnerBackgroundDropDownColor</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">7.5dp</item>
    </style>

</resources>
